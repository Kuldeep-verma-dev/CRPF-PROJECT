
@{
    ViewBag.Title = "quarterTypeManagement";
    Layout = "~/Views/Shared/adminLayout.cshtml";
}

<div class="row">
    <h3 class="pb-3 txtmycolor fw-bold text-center">Quarter Type Management</h3>
    <div class="col-sm-4">
        @*@if (ViewBag.msg != null)
            {
                <div class="alert alert-success">
                    <strong>Success! </strong>@ViewBag.msg
                </div>
            }*@
        <div class="card">
            <div class="card-body">
                <!-- No Labels Form -->
                <form class="row g-3 pt-2" method="post">
                    <div class="col-md-12">
                        <label style="margin-bottom:-20px">Quarter Type</label>
                        <input type="text" class="form-control" name="quarter_type" required placeholder="Enter Quarter Type">
                    </div>
                    <div class="col-md-12">
                        <label style="margin-bottom:-20px">Water Charge</label>
                        <input type="text" class="form-control" name="water_charge" required placeholder="Enter Your Water Charge">
                    </div>
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-sm btn-outline-secondary bgmycolor text-light">Add Now</button>
                    </div>
                </form><!-- End No Labels Form -->

            </div>
        </div>
    </div>
    <div class="col-sm-8">

        @{
            if (ViewBag.data != null)
            {
                if (ViewBag.data.Rows.Count > 0)
                {
                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th>Sn.</th>
                                <th>
                                    Quarter Type
                                </th>
                                <th>Water Charge</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int i = 1; }
                            @foreach (var row in ViewBag.data.Rows)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@row[1]</td>
                                    <td>@row[2]</td>
                                    <td>@row[3]</td>
                                    <td>
                                        <button class="btn btn-success"><i class="bi bi-pencil"></i></button>
                                        <button class="btn btn-danger"><a href="/admin/deleteQuarterType?sr=@row["sr"]" class="bi bi-trash text-white"></a></button>
                                    </td>
                                </tr>
                                { i = i + 1; }
                            }

                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->
                }
            }
        }
    </div>
</div>
