
@{
    Layout = null;
}


<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<title>Login Form HTML Design</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
<link href="~/Content/assets1/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/assets1/css/style.css" rel="stylesheet" />
<link href="~/Content/assets1/css/style1.css" rel="stylesheet" />


<div class="container-fluid">
    <div class="col-lg-12 mx-auto login-container">
        <div class="row form-header">
            <div class="col-md-1 logocol">
                <img src="/Content/assets1/images/logo-crpf.png" style="height: 80px;">
            </div>
            <div class="col-md-10 headcol">

                <h3>Central Reserve Police Force</h3>
                <h3 class="crpfcolor">केन्द्रीय रिजर्व पुलिस बल</h3>
            </div>
        </div>
        <div class="form-row row mt-5 p-5">
                <div class="col-sm-4 mx-auto border border-2 rounded p-4 m-3">

                    <h4 class="text-center mt-2">Admin Login</h4>
                    <form method="post">
                        <label for="username" style="margin-bottom:-1px;">Username:</label>
                        <input type="text" name="username" id="username" placeholder="Enter Userid" required class="form-control ">
                        <label for="password" style="margin-bottom: -1px; margin-top: -10px;">Password:</label>
                        <input type="text" required name="password" id="password" placeholder="Enter Password" class="form-control ">
                        <input type="submit" style="margin-top:-20px" value="Login Now" class="btn btn1 bgmycolor text-light sptext">
                    </form>
                </div>


        </div>
    </div>
</div>

