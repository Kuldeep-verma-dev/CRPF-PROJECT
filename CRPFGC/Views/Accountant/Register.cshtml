
@{
    Layout = null;
}

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<title>Login Form HTML Design</title>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
<link href="~/Content/assets1/css/bootstrap.min.css" rel="stylesheet" />


<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.7.5/css/bootstrap-select.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.7.5/js/bootstrap-select.min.js"></script>


<link href="~/Content/assets1/css/style.css" rel="stylesheet" />
<link href="~/Content/assets1/css/style1.css" rel="stylesheet" />
<div class="container-fluid">
    <div class="col-lg-12 mx-auto login-container">
        <div class="row form-header">
            <div class="col-md-1 logocol">
                <img src="/Content/assets1/images/logo-crpf.png" style="height: 80px;">
            </div>
            <div class="col-md-10 headcol">
                <h3>Central Reserve Police Force</h3>
                <h3 style="color: rgb(189, 115, 25);">केन्द्रीय रिजर्व पुलिस बल</h3>
            </div>
        </div>
        <form method="post" enctype="multipart/form-data">
            <div class="form-body">
                <div class="form-title row">
                    <h3>Employee Registration</h3>
                </div>
                <div class="form-row row">
                    <div class="col-md-2">
                        <label for="rank" style="margin-bottom:-20px">Quarter No:</label>
                        <sup class="req">*</sup>
                        <select name="reg_quarter_no" class="selectpicker form-control border" data-style="btn-light" data-live-search="true">
                            <option value="0">Choose Quarter</option>
                            @{
                                foreach (var row in ViewBag.quarterno.Rows)
                                {
                                    <option value="@row[0]">@row[2]/@row[1]</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="rank" style="margin-bottom:-20px">Rank:</label>
                        <sup class="req">*</sup>
                        <select name="reg_rank" class="selectpicker form-control border" data-style="btn-light" data-live-search="true">
                            <option value="0">Choose Rank</option>

                            @{
                                foreach (var row in ViewBag.rankno.Rows)
                                {
                                    <option value="@row[0]">@row[1]/@row[2]</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="force" style="margin-bottom:-20px">Force No:</label>
                        <sup class="req">*</sup>
                        <input type="text" name="force_no" placeholder="Enter Force Number" required class="form-control" id="force">
                    </div>
                    <div class="col-md-2">
                        <label for="name" style="margin-bottom:-20px">Name:</label>
                        <sup class="req">*</sup>
                        <input type="text" name="name" placeholder="Enter Your name" required class="form-control" id="name">
                    </div>

                    <div class="col-md-2">
                        <label for="unit" style="margin-bottom:-20px">Unit/Place of Posting:</label>
                        <sup class="req">*</sup>
                        <select name="reg_unit" class="selectpicker form-control border" data-style="btn-light" data-live-search="true">
                            <option value="0">Choose Unit/Place of posting</option>

                            @{
                                foreach (var row in ViewBag.placeofposting.Rows)
                                {
                                    <option value="@row[0]">@row[1]/@row[2]</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="mobile" style="margin-bottom:-20px">Mobile No (self):</label>
                        <sup class="req">*</sup>
                        <input type="number" name="mobile" placeholder="Enter mobile Number" required class="form-control">
                    </div>

                </div>

                <div class="form-row row">
                    <div class="col-md-2">
                        <label for="email" style="margin-bottom:-20px">Email id:</label>
                        <sup class="req">*</sup>
                        <input type="text" name="email" placeholder="Enter Email id" required class="form-control" id="email">
                    </div>
                    <div class="col-md-1">
                        <label for="gender" style="margin-bottom:-20px">Gender:</label>
                        <sup class="req">*</sup>
                        <select name="gender" class="form-control" id="gender">
                            <option value="select">Select</option>
                            <option value="male">Male</option>
                            <option value="female">Female</option>

                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="aadhar" style="margin-bottom:-20px">Aadhar No.:</label>
                        <sup class="req">*</sup>
                        <input type="number" name="aadhar" placeholder="Enter Aadhar No" class="form-control" id="aadhar">
                    </div>
                    <div class="col-md-2">
                        <label for="orderNo" style="margin-bottom:-20px">Quarter Allotment Order no:</label>
                        <sup class="req">*</sup>
                        <input type="text" name="quarter_allotment_order_no" placeholder="Quarter Allotment Order no" required
                               class="form-control" id="orderNo">
                    </div>

                    <div class="col-md-2">
                        <label for="allotmentDate" style="margin-bottom:-20px">Quarter Allotment Date:</label>
                        <sup class="req">*</sup>
                        <input type="date" name="quarter_allotment_date" placeholder="Quarter Allotment Date" class="form-control">
                    </div>
                    <div class="col-md-2">
                        <label for="occupationDate" style="margin-bottom:-20px">Quarter Acquisition Date</label>
                        <sup class="req">*</sup>
                        <input type="date" name="quarter_acquisition_date" placeholder="Quarter Acquisition Date" class="form-control">
                    </div>

                </div>

                <div class="form-row row">

                    <div class="col-md-4">
                        <label for="orderNo" style="margin-bottom:-20px">Physical Occupation Report:</label>
                        <sup class="req">*</sup>
                        <input type="file" name="physical_occupation_report" placeholder="Quarter Allotment Order no" class="form-control">
                    </div>
                    <div class="col-md-4">
                        <label for="allotmentDate" style="margin-bottom:-20px">Upload Quarter Allotment Letter:</label>
                        <sup class="req">*</sup>
                        <input type="file" name="upload_quarter_allotment_letter" placeholder="Quarter Allotment Date" required class="form-control">
                    </div>
                </div>
                <a href="/accountant/userlogin"> <input type="submit" value="Register Now" style="margin-top:-25px" class="btn1 btn bgmycolor text-light px-4 "></a>
                <div class="txtmycolor d-inline ">Already Have an Account?<a href="/Accountant/UserLogin"> Login here</a></div>

            </div>
        </form>
        <hr />
    </div>
</div>

